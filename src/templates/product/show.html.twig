{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'global.id' | trans }}</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>{{ 'global.name' | trans }}</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>{{ 'global.price' | trans }}</th>
                <td>{{product.price | format_currency('IRR')}}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-warning" href="{{ path('app_product_index') }}">{{ 'global.back' | trans }}</a>
    {% if is_granted('ROLE_EMPLOYEE') %}
    <a class="btn btn-outline-primary" href="{{ path('app_product_edit', {'id': product.id}) }}">{{ 'global.edit' | trans }}</a>

    {{ include('product/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}{{'login.welcome.title'|trans}}{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <h1>{{'login.title'|trans}}</h1>

    <div class="container">
    <div class="row justify-content-md-center">
        <div class="col-5">
            <form action="{{ path('app_login') }}" method="post">
            <div class="form-group">
                <label for="username">{{'login.username'|trans}}</label>
                <input type="text" class="form-control" id="username" name="_username"
                       placeholder= "09********" value="{{ last_username }}"/>
            </div>
            <div class="form-group">
                <label for="password">{{'login.password'|trans}}</label>
                <input type="password" class="form-control" id="password" name="_password"
                       placeholder= "password">
            </div>
            <br>
            <div>
                <button type="submit" class="btn btn-outline-primary">{{'login.button'|trans}}</button>
            </div>
            </form>
        </div>
    </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
        <label for="username">Email:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}"/>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password"/>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        <button type="submit">login</button>
    </form>
{% endblock %}